package sk;

import java.util.*;
public class sumofnbesingle {
			public static int su(int n) {
				while (n >= 10) {
		            n = sumofnbesingle(n);
		        }
		        return n;
		    }

		    private static int sumofnbesingle(int n) {
		        int sum = 0;
		        while (n > 0) {
		            sum += n % 10; 
		            n /= 10;       
		        }
		        return sum;
		    }

		    public static void main(String[] args) {
		        int n = 987654;
		        int result = su(n);
		        System.out.println("single-digit sum is: " + result);
		    }

		}


